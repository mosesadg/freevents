<!-- this is the show page -->

  <div class="map">
  </div>
  <div class="content">
<div class="eventdetail event<%= @event.emotion_id%>">
    Event: <br><%= @event.title%></br><br>
    Event Type:<br> <%= @event.emotion.name %><br><br>
    Location:<br> <%= @event.location %></br><br>
    Date: <br><%= @event.datetime.strftime("%a %b %d") %></br><br>


    <% if @event.free_food %>
      <div class="glassgreen"><i class="fa fa-cutlery"></i>
      </div>
      <% else %>
      <div class="glassred"><i class="fa fa-cutlery"></i>
      </div>
    <% end %>

    <% if @event.free_drink %>
      <div class="glassgreen"><i class="fa fa-glass"></i> </br>
    </div>
      <% else %>
      <div class="glassred"><i class="fa fa-glass"></i> </br>
    </div>
    <% end %>


      <a href="/emotions/"><i class="fa fa-chevron-left"></i></a>
    </div>

  </div>
